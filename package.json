{
  "name": "eggjs",
  "displayName": "eggjs",
  "description": "vscode extension for https://eggjs.org/",
  "version": "0.0.8",
  "publisher": "atian25",
  "homepage": "https://github.com/eggjs/vscode-eggjs",
  "repository": {
    "type": "git",
    "url": "git@github.com:eggjs/vscode-eggjs.git"
  },
  "engines": {
    "vscode": "^1.17.0"
  },
  "icon": "resources/eggjs.png",
  "categories": [
    "Languages",
    "Debuggers",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "eggjs options",
      "properties": {
        "eggjs.framework": {
          "type": "string[]",
          "default": [],
          "description": "Additional framework names"
        },
        "eggjs.sidebar.config": {
          "type": "boolean",
          "default": true,
          "description": "Show or hide the Config Explorer."
        },
        "eggjs.sidebar.test": {
          "type": "boolean",
          "default": true,
          "description": "Show or hide the Test Explorer."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "eggConfig",
          "name": "Egg Config",
          "when": "isEgg && config.eggjs.sidebar.config"
        },
        {
          "id": "eggTest",
          "name": "Egg Unit Test",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "eggConfig.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "eggTest.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "eggTest.runOnly",
        "title": "run only",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "eggTest.toggle",
        "title": "toggle(only/skip)",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "eggConfig.refreshEntry",
          "when": "view == eggConfig",
          "group": "navigation"
        },
        {
          "command": "eggTest.refreshEntry",
          "when": "view == eggTest",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "eggTest.runOnly",
          "when": "view == eggTest"
        },
        {
          "command": "eggTest.toggle",
          "when": "view == eggTest"
        }
      ]
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/egg.json"
      }
    ],
    "debuggers": [
      {
        "type": "Egg",
        "label": "Egg",
        "languages": [
          "javascript",
          "typescript"
        ]
      }
    ]
  },
  "scripts": {
    "vspub": "vsce publish",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "clear-module": "^2.1.0",
    "common-tags": "^1.4.0",
    "egg-utils": "^2.3.0",
    "globby": "^6.1.0",
    "is-type-of": "^1.2.0",
    "mz": "^2.6.0",
    "node-homedir": "^1.0.0",
    "vsce": "^1.31.1"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "autod": "^2.10.1",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "license": "MIT"
}
